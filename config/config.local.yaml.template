# Copy to config.local.yaml and fill in values.
# This file is gitignored.

anthropic:
  # Backend: "api" (direct Anthropic), "vertex" (GCP Vertex AI), "bedrock" (AWS Bedrock)
  backend: "vertex"

  # For backend: "vertex" — uses GCP credentials (service account or gcloud auth)
  # vertex_project_id defaults to gcp.project_id if not set
  vertex_region: "us-east5"

  # For backend: "api" — direct Anthropic API
  # api_key: "sk-ant-..."

  # For backend: "bedrock" — uses AWS credentials
  # bedrock_region: "us-east-1"

provision_db:
  host: "your-db-host.example.com"
  port: 5432
  database: "your_database"
  user: "your_readonly_user"
  password: "your_password"

aws:
  # Local dev: use a named profile
  profile: "athena"
  # OpenShift: use access keys instead (leave profile empty)
  # access_key_id: "AKIA..."
  # secret_access_key: "..."

azure:
  storage_account: "your_storage_account"
  container: "your_container"
  tenant_id: "your_tenant_id"
  client_id: "your_client_id"
  client_secret: "your_client_secret"

gcp:
  project_id: "your-project-id"
  billing_dataset: "your_billing_dataset"
  billing_account_id: "XXXXXX-XXXXXX-XXXXXX"
  credentials_path: "/path/to/service-account.json"

cloudtrail:
  # CloudTrail Lake event data store ID (UUID, not full ARN)
  # Find via: aws cloudtrail list-event-data-stores --region us-east-1
  event_data_store_id: "your-event-data-store-uuid"

auth:
  allowed_users: "user1@redhat.com,user2@redhat.com"
